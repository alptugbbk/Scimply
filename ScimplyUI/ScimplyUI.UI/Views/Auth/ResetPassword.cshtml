@model ScimplyUI.UI.Models.Auth.ForgotPasswordViewModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/auth/resetpassword.css" rel="stylesheet" />
</head>
<body>

    <div class="main">

        <div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
            <div id="success-message" class="alert alert-success d-none" role="alert"></div>
            <div id="error-message" class="alert alert-danger d-none" role="alert"></div>
        </div>

        <div class="form-box">

            <!-- LOGO -->
            <header class="header">
                <div class="logo">
                    <div class="logo-circle">
                        <span class="circle circle-1"></span>
                        <span class="circle circle-2"></span>
                    </div>
                    <h3>Passwordless</h3>
                </div>
            </header>

            <p>Please, enter your new password</p>

            <!-- RESET FORM -->
            <form id="reset-password-form" class="form-group fg-login">

                <input asp-for="UserId" type="hidden" id="userId" required />

                <div class="input-container">
                    <input asp-for="NewPassword" type="password" id="newPassword" class="input-field" placeholder="New Password" required>
                    <i id="toggle-password-reset" class="bi bi-eye-slash"></i>
                </div>

                <input type="password" class="input-field" id="confirmPassword" placeholder="Confirm Password" required>

                <button class="submit-btn">Reset</button>

            </form>



        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/auth/resetpassword.js"></script>
</body>
</html>