@model ScimplyUI.UI.Models.Auth.AdminLoginViewModel;

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/auth/loginstyle.css" rel="stylesheet" />
	<link href="~/css/auth/twofactormodal.css" rel="stylesheet" />
</head>
<body>

	<div class="main">

		<div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
			<div id="success-message" class="alert alert-success d-none" role="alert"></div>
			<div id="error-message" class="alert alert-danger d-none" role="alert"></div>
		</div>

		<div class="form-box">

			<!-- LOGO -->
			<header class="header">
				<div class="logo">
					<div class="logo-circle">
						<span class="circle circle-1"></span>
						<span class="circle circle-2"></span>
					</div>
					<h3>Scimply</h3>
				</div>
			</header>

			<!-- LOGIN FORM -->
			<form id="login-form" class="form-group fg-login">
				<input asp-for="UserName" type="text" class="input-field" placeholder="Username" required>
				<div class="input-container">
					<input asp-for="Password" type="password" id="password-login" class="input-field" placeholder="Password" required>
					<i id="toggle-password-login" class="bi bi-eye-slash"></i>
				</div>
				<div class="alt-text">
					<label class="form-check-label">
						<input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberme" />Remember Me
					</label>
					<a href="/auth/forgotpassword">Forgot Password?</a>
				</div>
				<button id="login-btn" type="submit" class="submit-btn" >Log in</button>
			</form>
		</div>

		<!--2FA-->
		<div id="codeModal">
			<div class="modal-content">
				<div class="modal-header">
					<h2>2FA</h2>
					<button class="close-button">×</button>
				</div>
				<div class="modal-body">
					<p><strong>Time remaining: <span id="timer-display"></span></strong></p>

					<p>A verification code has been sent to your e-mail. Please enter it to proceed.</p>
					<form id="otpForm">
						<input asp-for="Id" type="hidden" name="name" value="" />
						<div class="otp-container">
							<input type="text" class="otp-input" maxlength="1" />
							<input type="text" class="otp-input" maxlength="1" />
							<input type="text" class="otp-input" maxlength="1" />
							<input type="text" class="otp-input" maxlength="1" />
						</div>
						<button type="submit" class="modal-btn">Send</button>
					</form>
				</div>
			</div>
		</div>


	</div>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/auth/loginadmin.js"></script>


</body>
</html>
