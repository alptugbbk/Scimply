@model ScimplyUI.UI.Models.Auth.AdminLoginViewModel;

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/auth/loginstyle.css" rel="stylesheet" />
</head>
<body>

	<div class="main">
		
		<div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
			<div id="success-message" class="alert alert-success d-none" role="alert">
			</div>
			<div id="error-message" class="alert alert-danger d-none" role="alert">
			</div>
		</div>

		<div class="form-box">

			<!-- LOGO -->
			<header class="header">
				<div class="logo">
					<div class="logo-circle">
						<span class="circle circle-1"></span>
						<span class="circle circle-2"></span>
					</div>
					<h3>Scimply</h3>
				</div>
			</header>

			<!-- LOGIN FORM -->
			<form id="login-form" class="form-group fg-login">
				<input asp-for="UserName" type="text" class="input-field" placeholder="Username" required>
				<div class="input-container">
					<input asp-for="Password" type="password" id="password-login" class="input-field" placeholder="Password" required>
					<i id="toggle-password-login" class="bi bi-eye-slash"></i>
				</div>
				<div class="alt-text">
					<label class="form-check-label">
						<input type="checkbox" class="form-check-input" id="rememberme" />Remember Me
					</label>
					<a href="/auth/forgotpassword">Forgot Password?</a>
				</div>
				<button id="login-btn" type="submit" class="submit-btn" >Log in</button>
			</form>
		</div>

	</div>

	
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/auth/loginadmin.js"></script>

</body>
</html>
