@model ScimplyUI.UI.Models.Auth.ForgotPasswordViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/auth/forgotpassword.css" rel="stylesheet" />
</head>
<body>


    <div class="main">

        <div id="message-container" class="position-fixed top-0 end-0 p-4 mt-5" style="z-index: 1050;">
            <div id="success-message" class="alert alert-success d-none" role="alert"></div>
            <div id="error-message" class="alert alert-danger d-none" role="alert"></div>
        </div>


        <div class="form-box">

            <!-- LOGO -->
            <div class="img-div">
				<img src="~/assets/ic_send_mail.png" />
            </div>

            <p style="color: #777; display: flex; text-align:center; margin: 0px 40px;">Enter the email address you used when you joined and we’ll send you instructions to reset your password.</p>

            <!-- FORM -->
            <form id="ForgotPassword" class="form-group">

                <input asp-for="Email" id="email" type="text" class="input-field" placeholder="Please, enter your mail" required>

                <button id="submitBtn" class="submit-btn">Send</button>
                <a href="/auth/login" style="color: #777;">Back to Login</a>

            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/auth/forgotpassword.js"></script>
</body>
</html>